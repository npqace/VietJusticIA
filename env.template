# Environment Configuration for VietJusticia Docker Setup
# Copy this file to .env and modify the values as needed

# PostgreSQL Database Configuration
POSTGRES_DB=vietjusticia
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=8000
ENVIRONMENT=development

# PgAdmin Configuration (Optional)
PGADMIN_EMAIL=admin@vietjusticia.com
PGADMIN_PASSWORD=admin_password_here
PGADMIN_PORT=5050

# Database URL for Backend (used by the application)
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/vietjusticia
